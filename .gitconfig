[user]
	name = Stephen \"Rixius\" Middleton
	email = stephen+git@rixi.us
[core]
    editor = vim
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[alias]
    s     = status
    sb    = status -s -b
    ##### = #####
    d     = diff
    dc    = diff --cached
    dk    = diff --check
    dck   = diff --cached --check
    ##### = #####
    c     = commit
    ca    = commit -a
    cm    = commit -m
    cam   = commit -am
    cd    = commit --amend
    cad   = commit -a --amend
    ##### = #####
    a     = add
    ##### = #####
    l     = log --oneline
    lg    = log --oneline --graph --decorate
    ##### = #####
    o     = checkout
    ob    = checkout -b
    ##### = #####
    b     = branch
    ba    = branch -a
    bd    = branch -d
    br    = branch -r
    ##### = #####
    f     = fetch
    fo    = fetch origin
    ##### = #####
    ps    = push
    pl    = pull
    pb    = pull --rebase
    psf   = push -f
    psu   = push -u
    plo   = pull -u
    pso   = push origin
    plo   = pull origin
    pbo   = pull --rebase origin
    psfo  = push -f origin
    psuo  = push -u origin
    pluo  = pull -u origin
    ##### = #####
    rb    = rebase
    ##### = #####
    re    = reset
    rh    = reset HEAD
    reh   = reset --hard
    rem   = reset --mixed
    res   = reset --soft
    rehh  = reset --hard HEAD
    remh  = reset --mixed HEAD
    resh  = reset --soft HEAD
    ##### = #####
    r     = remote
    ra    = remote add
    rm    = remote rm
    rv    = remote -v
    rp    = remote prune
    rs    = remote show
    rso   = remote show origin
    rpo   = remote prune origin
[color]
    branch      = auto
    diff        = auto
    interactive = auto
    status      = auto
[push]
	default = matching
